<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	.cellTable {
      border-bottom: 1px solid #ccc;
      text-align: left;
      margin-bottom: 4px;
	</ui:style>
	<g:HTMLPanel>
		<div align="left" style="width:500px">
			<table>

				<tr>
					<td>
						<h4>Recipe ID</h4>
					</td>
				</tr>
				<tr>
					<td>
						<b:TextBox ui:field="txt_Id"></b:TextBox>
					</td>

				</tr>
				<tr>
					<td>
						<h4>Recipe Name</h4>
					</td>
				</tr>
				<tr>
					<td>
						<b:TextBox ui:field="txt_name"></b:TextBox>
					</td>
				</tr>
				<tr>
					<td>
						<b:Button icon="PLUS" type="LINK" ui:field="btn_add">Add
							new component</b:Button>
					</td>
				</tr>
				<tr>
					<td>
						<b:Modal ui:field="popup" title="Succes" backdrop="STATIC"
							keyboard="true" animation="true">
							<b:Heading size="5" ui:field="head_ok"></b:Heading>
							<b:ModalFooter>
								<b:Button type="LINK" ui:field="btn_ok">Ok</b:Button>
							</b:ModalFooter>
						</b:Modal>
					</td>
				</tr>
			</table>
		</div>
		<table cellspacing='0' cellpadding='0' style='width:100%;'>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 