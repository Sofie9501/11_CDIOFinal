<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">


    <!-- Servlets -->
    
  <!-- Operators -->
  <servlet>
    <servlet-name>ServerOperatorImpl</servlet-name>
    <servlet-class>dk.dtu.cdiofinal.server.ServerOperatorImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ServerOperatorImpl</servlet-name>
    <url-pattern>/g11_cdiofinal/service</url-pattern>
  </servlet-mapping>
  
    <!-- LOGGIN HANDLING -->
  <servlet>
  	<servlet-name>ServerMenuImpl</servlet-name>
  	<servlet-class>dk.dtu.cdiofinal.server.ServerMenuImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
      <servlet-name>ServerMenuImpl</servlet-name>
      <url-pattern>/g11_cdiofinal/MenuService</url-pattern>
  </servlet-mapping>

  
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>G11_CDIOFinal.html</welcome-file>
  </welcome-file-list>

</web-app>
